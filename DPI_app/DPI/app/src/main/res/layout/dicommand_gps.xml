<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dicommand_gps_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dicommand_gps_mode_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mode:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_gps_mode_spin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_gps_mode_spin" />

    <it.bleb.dpi.utils.CustomSpinner
        android:id="@+id/dicommand_gps_mode_spin"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dicommand_gps_mode_head"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dicommand_gps_periodic_container"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_gps_mode_spin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <SeekBar
            android:id="@+id/dicommand_gps_on_seek"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:max="131"
            app:layout_constraintEnd_toStartOf="@+id/dicommand_gps_on_value"
            app:layout_constraintStart_toEndOf="@+id/dicommand_gps_on_head"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/dicommand_gps_on_value"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="1 sec"
            android:textAlignment="center"
            android:textSize="@dimen/font_size"
            app:layout_constraintBottom_toBottomOf="@+id/dicommand_gps_on_seek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dicommand_gps_on_seek" />

        <TextView
            android:id="@+id/dicommand_gps_on_head"
            android:layout_width="@dimen/di_left_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ON Interval:"
            android:textAlignment="textEnd"
            android:textSize="@dimen/font_size"
            app:layout_constraintBottom_toBottomOf="@+id/dicommand_gps_on_seek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dicommand_gps_on_seek" />

        <SeekBar
            android:id="@+id/dicommand_gps_off_seek"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:max="131"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dicommand_gps_off_value"
            app:layout_constraintStart_toEndOf="@+id/dicommand_gps_off_head"
            app:layout_constraintTop_toBottomOf="@+id/dicommand_gps_on_seek" />

        <TextView
            android:id="@+id/dicommand_gps_off_value"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="1 sec"
            android:textAlignment="center"
            android:textSize="@dimen/font_size"
            app:layout_constraintBottom_toBottomOf="@+id/dicommand_gps_off_seek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dicommand_gps_off_seek" />

        <TextView
            android:id="@+id/dicommand_gps_off_head"
            android:layout_width="@dimen/di_left_width"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="OFF Interval:"
            android:textAlignment="textEnd"
            android:textSize="@dimen/font_size"
            app:layout_constraintBottom_toBottomOf="@+id/dicommand_gps_off_seek"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dicommand_gps_off_seek" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>