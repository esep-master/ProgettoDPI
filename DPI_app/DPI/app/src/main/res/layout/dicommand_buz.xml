<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dicommand_buz_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dicommand_buz_action_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Action:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_buz_action_spin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_buz_action_spin" />

    <it.bleb.dpi.utils.CustomSpinner
        android:id="@+id/dicommand_buz_action_spin"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dicommand_buz_action_head"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dicommand_buz_frequency_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Frequency:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_buz_frequency_seek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_buz_frequency_seek" />

    <SeekBar
        android:id="@+id/dicommand_buz_frequency_seek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:max="2"
        android:progress="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dicommand_buz_frequency_head"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_buz_action_spin" />

    <TextView
        android:id="@+id/buz_txt_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Low"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/dicommand_buz_frequency_seek"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_buz_frequency_seek" />

    <TextView
        android:id="@+id/buz_txt_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Med"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dicommand_buz_frequency_seek"
        app:layout_constraintStart_toStartOf="@+id/dicommand_buz_frequency_seek"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_buz_frequency_seek" />

    <TextView
        android:id="@+id/buz_txt_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="High"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dicommand_buz_frequency_seek"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_buz_frequency_seek" />


</androidx.constraintlayout.widget.ConstraintLayout>