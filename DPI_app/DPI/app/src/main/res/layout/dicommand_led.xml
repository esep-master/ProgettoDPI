<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dicommand_led_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dicommand_led_red_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Red:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_red" />

    <TextView
        android:id="@+id/dicommand_led_blinking_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Blinking:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_blinking"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_blinking" />

    <TextView
        android:id="@+id/dicommand_led_green_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Green:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_green" />

    <TextView
        android:id="@+id/dicommand_led_blue_head"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Blue:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_blue" />

    <SeekBar
        android:id="@+id/dicommand_led_seek_red"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="255"
        app:layout_constraintEnd_toStartOf="@+id/dicommand_led_red_value"
        app:layout_constraintStart_toEndOf="@+id/dicommand_led_red_head"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_led_seek_blinking" />

    <SeekBar
        android:id="@+id/dicommand_led_seek_blinking"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="59"
        app:layout_constraintEnd_toStartOf="@+id/dicommand_led_blinking_value"
        app:layout_constraintStart_toEndOf="@+id/dicommand_led_blinking_head"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/dicommand_led_seek_green"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="255"
        app:layout_constraintEnd_toStartOf="@+id/dicommand_led_green_value"
        app:layout_constraintStart_toEndOf="@+id/dicommand_led_green_head"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_led_seek_red" />

    <SeekBar
        android:id="@+id/dicommand_led_seek_blue"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:max="255"
        app:layout_constraintEnd_toStartOf="@+id/dicommand_led_blue_value"
        app:layout_constraintStart_toEndOf="@+id/dicommand_led_blue_head"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_led_seek_green" />

    <TextView
        android:id="@+id/dicommand_led_red_value"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_red" />

    <TextView
        android:id="@+id/dicommand_led_blinking_value"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="1s"
        android:textAlignment="center"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_blinking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_blinking" />

    <TextView
        android:id="@+id/dicommand_led_green_value"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_green" />

    <TextView
        android:id="@+id/dicommand_led_blue_value"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_led_seek_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_led_seek_blue" />

    <TextView
        android:id="@+id/dicommand_led_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/color_textview_rounded"
        android:text="@string/na"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="@dimen/huge_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_led_seek_blue"
        tools:text="0, 0, 0" />

</androidx.constraintlayout.widget.ConstraintLayout>