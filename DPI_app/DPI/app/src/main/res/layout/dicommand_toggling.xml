<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dicommand_toggling_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dicommand_toggling_input_desc"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="GPIO ID:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_toggling_id_spin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_toggling_id_spin" />

    <it.bleb.dpi.utils.CustomSpinner
        android:id="@+id/dicommand_toggling_id_spin"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dicommand_toggling_input_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dicommand_toggling_starting_desc"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Starting:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_toggling_starting_spin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_toggling_starting_spin" />

    <it.bleb.dpi.utils.CustomSpinner
        android:id="@+id/dicommand_toggling_starting_spin"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/font_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dicommand_toggling_starting_desc"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_toggling_id_spin" />

    <TextView
        android:id="@+id/dicommand_toggling_high_desc"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="High interval:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_toggling_high_seek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_toggling_high_seek" />

    <SeekBar
        android:id="@+id/dicommand_toggling_high_seek"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:max="254"
        android:textSize="@dimen/font_size"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/dicommand_toggling_high_txt"
        app:layout_constraintStart_toEndOf="@+id/dicommand_toggling_high_desc"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_toggling_starting_spin" />

    <TextView
        android:id="@+id/dicommand_toggling_high_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="1s"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_toggling_high_seek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_toggling_high_seek" />

    <TextView
        android:id="@+id/dicommand_toggling_low_desc"
        android:layout_width="@dimen/di_left_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Low interval:"
        android:textAlignment="textEnd"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_toggling_low_seek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_toggling_low_seek" />

    <SeekBar
        android:id="@+id/dicommand_toggling_low_seek"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:max="254"
        android:textSize="@dimen/font_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dicommand_toggling_high_txt"
        app:layout_constraintStart_toEndOf="@+id/dicommand_toggling_high_desc"
        app:layout_constraintTop_toBottomOf="@+id/dicommand_toggling_high_seek" />

    <TextView
        android:id="@+id/dicommand_toggling_low_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="1s"
        android:textSize="@dimen/font_size"
        app:layout_constraintBottom_toBottomOf="@+id/dicommand_toggling_low_seek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dicommand_toggling_low_seek" />

</androidx.constraintlayout.widget.ConstraintLayout>